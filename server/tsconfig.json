{
  "extends": "@artus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "target": "ESNext",
    "moduleResolution": "Node"
  },
  "include": [
    "./.build/*.ts",
    "./**/*.ts",
    "./**/*.json"
  ],
  "exclude": [
    "package.json",
    "tsconfig.json",
    "nodemon.json",
    "./**/package.json"
  ]
}
