datasource db {
  provider = "mysql"
  url      = env("MYSQL_URI")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model Account {
  id         Int       @id @default(autoincrement())
  userId     String    @unique
  email      String    @unique
  name       String
  roles      String
  salt       String // UUID
  password   String
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @default(now())
  inactive   Boolean   @default(false)
  inactiveAt DateTime?
}
